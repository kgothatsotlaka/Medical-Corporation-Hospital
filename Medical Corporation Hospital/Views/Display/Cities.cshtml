@model IEnumerable<Medical_Corporation_Hospital.Core.Domain.City>

@{
    ViewBag.Title = "Cities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cities</h2>
<p >@Html.ActionLink("Add New City", "New", "Cities", null, new{@class="btn btn-primary"})</p>
<table class="table">
    <thead>
    <tr>

        <th>City Name</th>
        <th>Province </th>
        <th>Country</th>
        <th>No of Hospitals</th>
        <th>Manage</th>
          

    </tr>
    </thead>
    <tbody>
    @foreach (var city in Model)
    {

        <tr>

            <td>@city.Name</td>
            <td>@city.Province</td>
            <td>@city.Country</td>
            <td>@city.Hospitals.Count</td>

            <td> 
                <text>
                    @Html.ActionLink("Update", "Edit", "Cities", new {id = city.Id}, new {@class = "btn btn-warning"})
                </text>
                <text class="btn btn-danger">Danger</text>
            </td>
            
              

        </tr>

    }
    </tbody>
</table>


