@model IEnumerable<Medical_Corporation_Hospital.Core.Domain.Hospital>
@{
    ViewBag.Title = "myHospitals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <h2>Hospitals</h2>
        <button type="button" class="btn btn-primary">@Html.ActionLink("Admit New Hospital", "New", "Hospital")</button>
    </div>


<table class="table">
    <thead>
    <tr>

        <th >Name</th>
        <th >City</th>
        <th >Wards</th>
        <th >Doctors</th>
        <th >Patients</th>
        <th >Manage</th>


    </tr>
    </thead>
    <tbody>
    @foreach (var hospital in Model)
    {
        <tr>

            <td >@hospital.Name</td>
            <td >@hospital.City.Name</td>
            <td >@hospital.Wards.Count</td>
            <td >@hospital.Doctors.Count</td>
            <td >@hospital.Patients.Count</td>
            <td>
                <button type="submit"
                        class="btn btn-warning">
                    @Html.ActionLink("Update", "Edit", "Hospital", new{id= hospital.Id}, null)
                </button>
                <button type="submit"
                        class="btn btn-danger">
                    Delete
                </button>

            </td>


        </tr>
    }
    </tbody>
</table>