@model IEnumerable<Medical_Corporation_Hospital.Core.Domain.Ward>
@{
    ViewBag.Title = "Wards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wards</h2>
<table class="table">
    <thead>
        <tr>

            <th>Ward Name</th>
            <th>Hospital Name</th>
            <th>No of Beds</th>
            <th>No of Patients</th>
          

        </tr>
    </thead>
    <tbody>
        @foreach (var ward in Model)
        {

            <tr>

                <td>@ward.Name</td>
                <td>@ward.Hospital.Name</td>
                <td>@ward.Beds.Count</td>
                <td>@ward.Patients.Count</td>
              

            </tr>

        }
    </tbody>
</table>

