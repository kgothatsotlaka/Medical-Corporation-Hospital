@model IEnumerable<Medical_Corporation_Hospital.Core.Domain.Bed>
@{
    ViewBag.Title = "Beds";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Beds</h2>
<table class="table">
    <thead>
    <tr>
        
        <th>Bed Number</th>
        <th>Hospital</th>
        <th>Ward</th>
        <th>Occupied</th>
        <th>Patient Name</th>


    </tr>
    </thead>
    <tbody>
 @foreach(var bed in Model)
 { 
        <tr>

            <td>@bed.Number</td>
            <td>@bed.Hospital.Name</td>
            <td>@bed.Ward.Name</td>
            <td>@bed.Occupied</td>
            @if (bed.Occupied.Contains("Yes"))
            {
                <td>@bed.Patient.FullName</td>
            }
            else
            {
                <td>No patient</td>
            }


        </tr>

    }
    </tbody>
</table>

