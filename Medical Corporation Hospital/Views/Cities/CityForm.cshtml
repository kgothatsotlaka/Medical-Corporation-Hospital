@using System.Web.UI.WebControls
@model Medical_Corporation_Hospital.Core.Domain.City

@{
    ViewBag.Title = "CityForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm("Save", "Cities"))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.Name)
        @Html.TextBoxFor(m=>m.Name, new{@class="form-control"})
        @Html.ValidationMessageFor(m=>m.Name)
    </div> 
    
    <div class="form-group">
        @Html.LabelFor(m => m.Country)
        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Country)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Province)
        @Html.TextBoxFor(m => m.Province, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Province)
    </div>

    @Html.HiddenFor(m=>m.Id)
    <button type="submit" class="btn btn-primary">
        Save
    </button>
}

