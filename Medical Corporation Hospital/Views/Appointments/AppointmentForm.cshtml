@model Medical_Corporation_Hospital.ViewModels.AppointmentsViewModel

@{
    ViewBag.Title = "AppointmentForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Hospital</h2>

@using (Html.BeginForm("Save", "Hospital"))
{
   

    <div class="form-group">
        @Html.LabelFor(m => m.Doctor.Id)
        @Html.DropDownListFor(m => m.Hospital.CityId, new SelectList(Model.Cities, "Id", "Name", "Select City"), new { @class = "form-control" })
    </div>

  
    <button type="submit" class="btn btn-primary">Save</button>

}

